<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="aDesp.Theme" parent="@android:style/Theme">
       <item name="android:windowNoTitle">true</item>
    </style>

    <style name="aDesp.Window" parent="@android:style/Theme.Dialog">
       <item name="android:windowNoTitle">true</item>
       <item name="android:windowBackground">@android:color/transparent</item>
       <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="aDesp.Dialog" parent="@android:style/Theme.Dialog">
       <item name="android:windowNoTitle">true</item>
       <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="texto_menu">
       <item name="android:textSize">12sp</item>
       <item name="android:textColor">#000</item>
       <item name="android:shadowColor">#888</item>  
       <item name="android:shadowRadius">2</item>  
       <item name="android:shadowDx">1</item>  
       <item name="android:shadowDy">1</item>
       <item name="android:gravity">center</item>
       <item name="android:clickable">true</item>
       <item name="android:padding">6dp</item>
       <item name="android:layout_weight">1</item>
       <item name="android:background">@color/cinza_claro</item>
    </style>
    
    <style name="texto_menu_titulo">
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">#fff</item>
       <item name="android:shadowColor">#888</item>  
       <item name="android:shadowRadius">2</item>  
       <item name="android:shadowDx">1</item>  
       <item name="android:shadowDy">1</item>
       <item name="android:gravity">center</item>
       <item name="android:clickable">true</item>
       <item name="android:focusable">true</item>
       <item name="android:padding">4dp</item>
    </style>

    <style name="text_lista">
       <item name="android:textSize">16sp</item>
       <item name="android:textColor">#FFF</item>
       <item name="android:shadowColor">#888</item>  
       <item name="android:shadowRadius">2</item>  
       <item name="android:shadowDx">1</item>  
       <item name="android:shadowDy">1</item>
       <item name="android:padding">6dp</item>
    </style>
</resources>